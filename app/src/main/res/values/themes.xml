<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HoxtonPrayerTimeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="grid_card_style" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="android:shadowRadius">@integer/material_motion_duration_medium_1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="prayer_block_linear_layout_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <!--        <item name="android:gravity">center_horizontal|center_vertical</item>-->
    </style>

    <style name="prayer_block_linear_layout_style_vert">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="prayer_blocks_text_styles_1">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="prayer_blocks_text_styles">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="left_prayer_block_text_styles" parent="prayer_blocks_text_styles">
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="date_text_style">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/next_prayer_label_textsize</item>
    </style>

    <style name="broadcast_card_style" parent="Theme.HoxtonPrayerTimeApp">

    </style>
</resources>